<?xml version="1.0" encoding="utf-8"?>

<resources>

    <declare-styleable name="RecyclerViewPager">
        <attr name="rvp_triggerOffset" format="float" />
        <attr name="rvp_flingFactor" format="float" />
        <attr name="rvp_singlePageFling" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RCBanner">
        <!-- 指示点容器背景 -->
        <attr name="rc_pointContainerBackground" format="reference|color"/>
        <!-- 指示点背景 -->
        <attr name="rc_pointDrawable" format="reference"/>
        <!-- 指示点容器左右内间距 -->
        <attr name="rc_pointContainerLeftRightPadding" format="dimension"/>
        <!-- 指示点上下外间距 -->
        <attr name="rc_pointTopBottomMargin" format="dimension"/>
        <!-- 指示点左右外间距 -->
        <attr name="rc_pointLeftRightMargin" format="dimension"/>
        <!-- 指示器的位置 -->
        <attr name="rc_indicatorGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_horizontal" value="0x01"/>
        </attr>
        <!-- 是否开启自动轮播 -->
        <attr name="rc_pointAutoPlayAble" format="boolean"/>
        <!-- 自动轮播的时间间隔 -->
        <attr name="rc_pointAutoPlayInterval" format="integer"/>
        <!-- 页码切换过程的时间长度 -->
        <attr name="rc_pageChangeDuration" format="integer"/>
        <!-- 当只有一页数据时是否显示指示器，默认值为 false -->
        <attr name="rc_isNeedShowIndicatorOnOnlyOnePage" format="boolean"/>
        <!-- 自动轮播区域距离 BGABanner 底部的距离 -->
        <attr name="rc_contentBottomMargin" format="dimension"/>
        <!-- 宽高比例，如果大于 0，则会根据宽度来计算高度，否则使用 android:layout_height 指定的高度 -->
        <attr name="rc_aspectRatio" format="float"/>
    </declare-styleable>
</resources>
